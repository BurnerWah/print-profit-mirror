{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["*.json", "*.jsonc"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noVoid": "warn",
        "useLiteralKeys": "off",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noUndeclaredVariables": "warn",
        "useHookAtTopLevel": "warn"
      },
      "style": {
        "noRestrictedGlobals": {
          "level": "warn",
          "options": {
            "deniedGlobals": [
              "__dirname",
              "__filename",
              "atob",
              "btoa",
              "escape",
              "exports",
              "global",
              "InternalError",
              "module",
              "unescape"
            ]
          }
        },
        "useCollapsedElseIf": "warn",
        "useDefaultParameterLast": "off",
        "useFragmentSyntax": "warn",
        "useShorthandAssign": "warn",
        "useSingleCaseStatement": "warn"
      },
      "suspicious": {
        "noApproximativeNumericConstant": "warn"
      },
      "nursery": {
        "noDuplicateJsonKeys": "warn",
        "noEmptyTypeParameters": "warn",
        "noGlobalAssign": "warn",
        "noGlobalEval": "error",
        "noMisleadingCharacterClass": "warn",
        "noThenProperty": "error",
        "noUselessTernary": "warn",
        "useForOf": "warn",
        "useNodejsImportProtocol": "warn"
      }
    }
  },
  "overrides": [
    {
      "include": [
        ".vscode/**",
        "jsconfig.json",
        "jsconfig.*.json",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ]
}
