{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["*.json", "*.jsonc"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "warn"
      },
      "style": {
        "useDefaultParameterLast": "off",
        "useFragmentSyntax": "warn"
      }
    }
  },
  "overrides": [
    {
      "include": [
        ".vscode/**",
        "jsconfig.json",
        "jsconfig.*.json",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ]
}
